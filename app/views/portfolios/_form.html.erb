<%= form_for(@portfolio_item) do |f| %>
<% if @portfolio_item.errors.any? %>
    <% @portfolio_item.errors.full_messages.each do |error| %>
      <%= js add_gritter(error, title: "Ang Portfolio", sticky: false) %>
   <% end %>
  <% end %>
<div class="row">
  <div class="col-md-6">
    <div class="form-group">
      <%= f.label :title, class: "text-gray" %>
      <%= f.text_field :title, class: "form-control form-control-plain" %>
    </div>
    <div class="form-group">
      <%= f.label :subtitle, class: "text-gray" %>
      <%= f.text_field :subtitle, class: "form-control form-control-plain" %>
    </div>
    <div class="form-group">
      <label class="btn btn-fill btn-info" >
        Upload Main Image<%= f.file_field :main_img, style: 'display:none' %>
      </label>

</div>
      <div class="form-group">
        <label class="btn btn-fill btn-info">
          Upload Thumb Image<%= f.file_field :thumb_img, style: 'display:none' %>
        </label>
        </div>
  </div>



  <div class="col-md-6">
  <div class="form-group">
    <%= f.label :body, class: "text-gray" %>
    <%= f.text_area :body, class: "form-control form-control-plain", rows: 13 %>
  </div>
</div>


<hr>
<div class="col-md-12">
  <h2>Tech Used:</h2>
  <div>
    <%= f.fields_for :technologies do |technology_form|%>
     <%= render 'technology_fields', f: technology_form %>
    <% end %>
  </div>
  <div>
        <%= link_to_add_association 'Add Technology', f, :technologies %>
     </div>
  <div class="actions">
    <%= f.submit "Post it", class: "btn btn-fill btn-info" %>
  </div>
</div>
</div>
<% end %>
