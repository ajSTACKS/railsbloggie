<%= form_for(@portfolio_item) do |f| %>
<div class="row">
  <div class="col-md-6">
    <div class="form-group">
      <%= f.label :title, class: "text-gray" %>
      <%= f.text_field :title, class: "form-control form-control-plain" %>
    </div>
    <div class="form-group">
      <%= f.label :subtitle, class: "text-gray" %>
      <%= f.text_field :subtitle, class: "form-control form-control-plain" %>
    </div>
    <div class="form-group">
<%= f.file_field :main_img %>
</div>
      <div class="form-group">
        <%= f.file_field :thumb_img %></div>
  </div>



  <div class="col-md-6">
  <div class="form-group">
    <%= f.label :body, class: "text-gray" %>
    <%= f.text_area :body, class: "form-control form-control-plain", rows: 13 %>
  </div>
</div>


<hr>
<div class="col-md-12">
  <h2>Tech Used:</h2>
  <div>
    <%= f.fields_for :technologies do |technology_form|%>
    <div class="form-group">
      <%= technology_form.label :name, class: "text-gray" %>
      <%= technology_form.text_field :name, class: "form-control form-control-plain" %>
    </div>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit "Post it", class: "btn btn-fill btn-info" %>
  </div>
</div>
</div>
<% end %>
