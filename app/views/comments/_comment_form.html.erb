<% unless current_user.is_a? GuestUser %>
  <%= form_for @comment, url: '#' do |f| %>
     <div class="form-group">
      <%= f.label :content, class: 'text-gray' %>
      <%= f.text_area :content, class: 'form-control' %>
    </div>

    <%= f.submit 'Post Comment', class: 'btn btn-info' %>
  <% end %>
<% end %>
