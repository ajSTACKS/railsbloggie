<div class="section section-contact-form">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4 text-center">
          <h2>Edit <%= resource_name.to_s.humanize %></h2>
          <div class="separator separator-danger">âœ»</div>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= devise_error_messages! %>

          <div class="form-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-plain", placeholder: "Email" %>
          </div>

          <div class="form-group">
            <%= f.text_field :name, class: "form-control form-control-plain", placeholder: "Name"  %>
          </div>
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

          <div class="form-group">
            <i>(leave blank if you don't want to change it)</i>
            <%= f.password_field :password, autocomplete: "off", class: "form-control form-control-plain", placeholder: "Password" %>
            <% if @minimum_password_length %>
              <em><%= @minimum_password_length %> characters minimum</em>
            <% end %>
          </div>
          <div class="form-group">
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control form-control-plain", placeholder: "Password Confirmation" %>
          </div>
          <div class="form-group">
            <i>(we need your current password to confirm your changes)</i>
            <%= f.password_field :current_password, autocomplete: "off", class: "form-control form-control-plain", placeholder: "Current Password" %>
          </div>
          <div class="button-signin">
            <%= f.submit "Update", class: "btn btn-black btn-round btn-fill btn-wd" %>
          </div>
          <h3>Cancel my account</h3>
          <p>Unhappy?</p>
          <div class="button-signin">
              <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-black btn-round btn-fill btn-wd" %>
          </div>
          <p class='auth-links'>
              Go <%= link_to "Back", :back %> to previous page
          </p>
          <% end %>
      </div>
    </div>
  </div>
</div>
