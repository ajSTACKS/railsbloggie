<div class="section section-white section-contact-form">
  <div class="static-image">
    <div class="image" style="background-image: url('https://images.unsplash.com/photo-1495217218818-bb86120ebd53?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=8504396bbe2b5cd46ca659e26ff3b958&auto=format&fit=crop&w=2250&q=80')"></div>
    <div class="container">
      <div class="form-container section-contact-form">
        <div class="col-md-4 col-md-offset-4 text-center">
          <h2>Sign up</h2>
          <div class="separator separator-danger">â™¦</div>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="form-group">
            <%= f.label :email, class: "text-gray" %><br/>
            <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control form-control-plain" %>
          </div>
          <div class="form-group">
            <%= f.label :name, class: "text-gray" %><br/>
            <%= f.text_field :name,class: "form-control form-control-plain" %>
          </div>

          <div class="form-group">
            <%= f.label :password, class: "text-gray" %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %>
                characters minimum)</em>
            <% end %><br/>
            <%= f.password_field :password, autocomplete: "off",class: "form-control form-control-plain" %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, class: "text-gray" %><br/>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control form-control-plain" %>
          </div>

          <div class="actions">
            <%= f.submit "Sign up", class: "btn btn-black btn-round btn-fill btn-wd" %>
          </div>
        <% end %>
        <br>
        <div class="auth-links">
          Already have an account?
          <%= render "devise/shared/links" %>
        </div>

      </div>
    </div>
  </div>
</div>
</div>
