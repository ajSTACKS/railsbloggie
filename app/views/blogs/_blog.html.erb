<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="card card-blog">
        <div class="content">
          <div class="circle-black">
            <div class="circle">
              <span class="date-wrapper">Posted
                <%= distance_of_time_in_words(blog.created_at, Time.now) %>
                ago</span>
            </div>
          </div>
          <h3 class="card-title"><%= link_to blog.title.upcase, blog %></h3>
          <%= render partial: 'blogs/admin_actions', locals: { blog: blog } %>
          <p class="text-description text-gray"><%= blog.body %></p>
        </div>
      </div>

    </div>

  </div>
</div>
