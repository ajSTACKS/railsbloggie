<div class="section section-contact-form">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4 text-center">

        <div class="form-group">
          <div class:="class:" "text-gray" %="%">
            <%= @blog.title %>
          </div>
        </div>

        <div class="form-group">
          <div class:="class:" "text-gray" %="%">
            <%= @blog.body %>
          </div>
        </div>

        <% unless current_user.is_a? GuestUser %>
          <%= form_for @comment, url: '#' do |f| %>
             <div class="form-group">
              <%= f.label :content, class: 'text-gray' %>
              <%= f.text_area :content, class: 'form-control' %>
            </div>

            <%= f.submit 'Post Comment', class: 'btn btn-info' %>
          <% end %>
        <% end %>

        <%= render @blog.comments %>

        <%= link_to 'Edit', edit_blog_path(@blog) if logged_in?(:site_admin) %>
        |
        <%= link_to 'Back', blogs_path %>
      </div>
    </div>
  </div>
</div>
