<div class="section section-contact-form">
  <div class="container">
    <div class="row">
      <div class="col-md-6 text-center">

        <div class="form-group">
          <div class:="class:" "text-gray" %="%">
            <%= @blog.title %>
          </div>
        </div>
        <p>
          <%= @blog.topic.title %>
        </p>
        <%= link_to 'Edit', edit_blog_path(@blog) if logged_in?(:site_admin) %>
        |
        <%= link_to 'Back', blogs_path %>
        <div class="form-group">
          <div class:="class:" "text-gray" %="%">
            <%= @blog.body %>
          </div>
        </div>

        <%= render 'comments/comment_form' %>
        <div id="comments" data-blog-id="<%= @blog.id %>">
          <%= render @blog.comments %>
        </div>
      </div>
      <div class="col-md-6 text-center">
      <div class="sidebar-module">
          <h4>Topics</h4>
          <% @side_bar_topics.each do |topic| %>
            <p><%= link_to topic.title, topic_path(topic) %></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
