
<%= form_with(model: blog, local: true) do |form| %>
  <% if blog.errors.any? %>
  <% blog.errors.full_messages.each do |error| %>
    <%= alert_generator error %>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= form.label :title, class: "text-gray" %>
    <%= form.text_field :title, id: :blog_title, class: "form-control form-control-plain" %>
  </div>

  <div class="form-group">
     <%= form.label :topic_id, class: "text-gray" %>
     <%= form.collection_select(:topic_id, Topic.all, :id, :title,
                             {

                               include_blank: true
                             },
                             class: 'form-control'
                             )
     %>
   </div>

  <div class="form-group">
    <%= form.label :body, class: "text-gray" %>
    <%= form.text_area :body, id: :blog_body, class: "form-control form-control-plain", rows: "8" %>
  </div>

  <div class="button-signin">
    <%= form.submit "Submit", class: "btn btn-black btn-round btn-fill btn-wd" %>
  </div>
<% end %>
